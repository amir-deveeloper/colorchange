<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="box" alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.alpha.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="welcomeText" />
   <ToggleButton fx:id="colorchange" mnemonicParsing="false" onAction="#doColor" text="ToggleButton" />
    <Button onAction="#doSmth" text="Hello!" />
   <TextField fx:id="name" promptText="a" />
   <TextField fx:id="name1" promptText="b" />
   <TextField fx:id="name2" promptText="c" />
</VBox>
